{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["ES2016", "ES2017", "ES2018", "ES2019"],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true
  },
  "exclude": ["test", "lib"]
}
